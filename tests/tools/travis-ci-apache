<VirtualHost *:80>
  DocumentRoot /var/www/html

  AddType text/html .php

  DirectoryIndex index.php

  <Directory "/var/www/html/">
    Options FollowSymLinks MultiViews ExecCGI
    AllowOverride All
    Require all granted
  </Directory>


  <FilesMatch \.(php|phar)$>
    SetHandler "proxy:unix:/run/php-fpm/www.sock|fcgi://localhost"
  </FilesMatch>

