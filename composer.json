{
    "name": "cacti/cacti",
    "description": "Cacti Network Monitoring Framework",
    "type": "composer-plugin",
    "license": "GPL2",
    "require": {
        "composer-plugin-api": "^1.1 || ^2.0",
        "cypresslab/gitelephant": "^4.1",
        "friendsofphp/php-cs-fixer": "^2.17",
        "n98/junit-xml": "^1.0",
        "overtrue/phplint": "^2.3",
        "symfony/console": "^5.2",
        "symfony/finder": "^5.2",
        "symfony/process": "^5.2",
        "symfony/yaml": "^5.2"
    },
    "authors": [
        {
            "name": "The Cacti Group",
            "email": "developers@cacti.net"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "composer/composer": "^2.0",
        "friendsofphp/php-cs-fixer": "^2.17",
        "overtrue/phplint": "^2.3",
        "squizlabs/php_codesniffer": "^3.5"
    },
    "scripts": {
        "lint": "phplint --no-cache src/",
        "phpcsfixer": "php-cs-fixer fix --diff --config=.php_cs --dry-run --ansi src/",
        "phpcsfixit": "php-cs-fixer fix --config=.php_cs --ansi src/"
    }
}
